
<!DOCTYPE html>
<html>

<head>
    <title>Punjab State Power Corporation Limited</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico">
    <!-- SEO Start-->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <!-- SEO End-->
    <meta name="theme-color" content="#016c9a" />
    <meta name="msapplication-navbutton-color" content="#016c9a" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#016c9a" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">

    <!-- CSS Start -->
    <link href="~/css/main.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/fontawesome.css" rel="stylesheet" />
    <!-- Footable CSS Start-->
    <link href="~/css/footable.bootstrap.min.css" rel="stylesheet" />
    <!-- Footable CSS End-->
    <link href="~/css/screen.css" rel="stylesheet" />

</head>

<body class="">

    <!-- HTML Start -->
    <div id="layout-wrapper">

        <header id="page-topbar">
            <div class="navbar-header">
                <div class="d-flex">
                    <!-- Hamburger  menu-->
                    <button type="button" class="btn btn-sm px-3 font-size-16 header-item waves-effect"
                            id="vertical-menu-btn">
                        <i class="fa fa-fw fa-bars"></i>
                    </button>
                    <!-- Logo -->
                    <div class="navbar-brand-box">
                        <a href="#" class="logo">
                            <span>
                                <img src="~/logo.png" alt="Punjab State Power Corporation Limited" height="54">
                            </span>
                        </a>
                    </div>
                </div>

                <div class="d-flex heading-right-hld">
                    <!-- Company Title Start-->
                    <div class="company-title">
                        Punjab State Power Corporation Limited
                    </div>
                    <!-- Company Title End-->
                    <!-- My Profile Hld Start-->
                    <div class="dropdown  ml-2 ml-md-3">
                        <button type="button" class="btn header-item dropdown-toggle profile-dd" id="dropdownMyProfile"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img class="rounded-circle header-profile-user" src="~/my-profile-pic1.jpg"
                                 alt="Header Avatar">
                            <span class="d-none d-sm-inline-block ms-1">Manpreet</span>
                            <i class="fas fa-angle-down d-none d-sm-inline-block"></i>
                        </button>

                        <div class="dropdown-menu dropdown-menu-end profile-ddmenu" aria-labelledby="dropdownMyProfile">
                            <!-- item-->
                            <a class="dropdown-item" href="#"><span>Profile</span></a>
                            <a class="dropdown-item" href="#"><span>Logout</span></a>
                        </div>
                    </div>
                    <!-- My Profile Hld End-->
                </div>

            </div>
        </header>

        <!-- ========== Left Sidebar Start ========== -->
        @Html.Partial("_LeftSidebar")
        <!-- Left Sidebar End -->

        <!-- Navbar partial view -->
        @Html.Partial("_Navbar")

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        

        <div class="">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <!-- Footer partial view -->
        @Html.Partial("_Footer")

    </div>



    <!-- JS Start -->
    <script src="~/js/main.min.js"></script>
    <script src="~/js/simplebar.min.js"></script>
    <script src="~/js/metisMenu.min.js"></script>
    <script src="~/js/common.ui.js"></script>

    <!-- JS End -->
</body>

</html>